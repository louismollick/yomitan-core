{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noExcessiveCognitiveComplexity": "off"
            },
            "style": {
                "noParameterAssign": "off",
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noAssignInExpressions": "off",
                "noImplicitAnyLet": "off",
                "useValidTypeof": "off",
                "noShadowRestrictedNames": "off",
                "noMisleadingCharacterClass": "off",
                "noControlCharactersInRegex": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "always"
        }
    },
    "files": {
        "ignore": ["dist/**", "node_modules/**", "*.json"]
    }
}
